<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard Admin Template by Tooplate.com</title>
    <!--

    Template 2108 Dashboard

    http://www.tooplate.com/view/2108-dashboard

    -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link href="~/Areas/Admin/assets/css/fontawesome.min.css" rel="stylesheet" />
    <!-- https://fontawesome.com/ -->
    <link href="~/Areas/Admin/assets/css/fullcalendar.min.css" rel="stylesheet" />
    <!-- https://fullcalendar.io/ -->
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- https://getbootstrap.com/ -->
    <link href="~/Areas/Admin/assets/css/tooplate.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">
    @RenderSection("styles", false)
</head>

<body id="reportsPage">
    <div class="" id="home">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-xl navbar-light bg-light">
                        <a class="navbar-brand" href="#">
                            <i class="fas fa-3x fa-tachometer-alt tm-site-icon"></i>
                            <h1 class="tm-site-title mb-0"><a href="@Url.Action("Index","Dashboard")">Dashboard</a></h1>
                        </a>
                        <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item">
                                    <a class="nav-link " id="dashboardA" href="@Url.Action("Index","Dashboard")">
                                        Dashboard
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="articlesA" href="@Url.Action("Index","AdminArticle")">Articles</a>
                                </li>
                                @Html.Action("NotificationPartial","AdminReport")

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index","AdminAccount")" id="AccountsA">Accounts</a>
                                </li>
                                <li class="nav-item"><a href="@Url.Action("Index","Home", new {area = ""})" class="nav-link dropdown" -toggle><i class="fas fa-external-link-alt" style="font-size:larger;"></i></a></li>
                            </ul>
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link d-flex" href="login.html">
                                        <i class="far fa-user mr-2 tm-logout-icon"></i>
                                        <span>Logout</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- row -->
            @RenderBody()
            <footer class="row tm-mt-small">
                <div class="col-12 font-weight-light">
                    <p class="d-inline-block tm-bg-black text-white py-2 px-4">
                        Copyright &copy; 2018. Created by
                        <a href="http://www.tooplate.com" class="text-white tm-footer-link">Tooplate</a> |  Distributed by <a href="https://themewagon.com" class="text-white tm-footer-link">ThemeWagon</a>
                    </p>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Areas/Admin/assets/js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="~/Areas/Admin/assets/js/moment.min.js"></script>
    <!-- https://momentjs.com/ -->
    <script src="~/Areas/Admin/assets/js/utils.js"></script>
    <script src="~/Areas/Admin/assets/js/Chart.min.js"></script>
    <!-- http://www.chartjs.org/docs/latest/ -->
    <script src="~/Areas/Admin/assets/js/fullcalendar.min.js"></script>
    <!-- https://fullcalendar.io/ -->
    <script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script src="~/Areas/Admin/assets/js/tooplate-scripts.js"></script>
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        let ctxLine,
            ctxBar,
            ctxPie,
            optionsLine,
            optionsBar,
            optionsPie,
            configLine,
            configBar,
            configPie,
            lineChart;
        barChart, pieChart;
        // DOM is ready
        $(function () {
            updateChartOptions();
            drawLineChart(); // Line Chart
            drawBarChart(); // Bar Chart
            drawPieChart(); // Pie Chart
            drawCalendar(); // Calendar

            $(window).resize(function () {
                updateChartOptions();
                updateLineChart();
                updateBarChart();
                reloadPage();
            });
        })</script>
    <script>
        var activeLink = "@ViewBag.active";
        if (activeLink) {
            switch (activeLink) {
                case "Dashboard":
                    $("#dashboardA").addClass("active");
                    break;
                case "Articles":
                    $("#articlesA").addClass("active");
                    break;
                case "Reports":
                    $("#reportsA").addClass("active");
                    break;
                case "Accounts":
                    $("#AccountsA").addClass("active");
                    break;
                default:
            }
        }
    </script>
    <script src="~/Scripts/toastr.min.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>