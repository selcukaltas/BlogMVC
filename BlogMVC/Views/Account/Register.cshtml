@model BlogMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@section styles{
    <style>
        .container {
            border-radius: 5px;
            margin: auto;
            background-color: white;
        }

        .chkbox {
            display: flex;
            align-items: baseline;
        }

        .loginh4 {
            padding-top: 50px;
            margin-top: 0px
        }
    </style>
}
<div class="container">
    <section class="row narrow section-intro add-bottom text-center">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="loginh4">Create a new account.</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div>
                @Html.LabelFor(m => m.Email)
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "full-width" })
                    @Html.ValidationMessageFor(m => m.Email)

                </div>
            </div>
            <div>
                @Html.LabelFor(m => m.UserName)
                <div>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "full-width" })
                    @Html.ValidationMessageFor(m=>m.UserName)
                </div>
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "full-width" })
                @Html.ValidationMessageFor(m => m.Password)

            </div>
            <div>
                @Html.LabelFor(m => m.ConfirmPassword)
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "full-width" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)

                </div>
            </div>
            <div>
                <div>
                    <input type="submit" class="btn--default" value="Register" />
                </div>
            </div>
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}